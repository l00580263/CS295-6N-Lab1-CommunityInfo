            est laborum."
        });

        //sort
        locations.Sort((l1, l2) => l1.Name.CompareTo(l2.Name));
    }



    <div class="container">
        @{
            foreach (var e in locations)
            {
                <div class="row">
                    <div class="col-lg-4">
                        <div class="thumbnail">
                            <img class="img-rounded img-responsive" src="@e.ImageURL" />
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <h3>@e.Name</h3>
                        @e.Description
                    </div>
                </div>
            }
        }
    </div>



</body>
</html>