        locations.Add(new LocationEntry()
        {
            Name = "Debaltseve",
            ImageURL = "https://upload.wikimedia.org/wikipedia/commons/9/9d/%D0%94%D0%BE%D1%80%D0%BE%D0%B3%D0%B0_%D0%BD%D0%B0_%D0%94%D0%B5%D0%B1%D0%B0%D0%BB%D1%8C%D1%86%D0%B5%D0%B2%D0%B5_%2816170898900%29.jpg",
