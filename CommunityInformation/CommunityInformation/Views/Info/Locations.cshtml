            est laborum."
        });

        locations.Add(new LocationEntry()
        {
            Name = "Luhansk",
            ImageURL = "https://upload.wikimedia.org/wikipedia/commons/3/3b/%D0%9E%D1%82%D0%B5%D0%BB%D1%8C_%D0%A3%D0%BA%D1%80%D0%B0%D0%B8%D0%BD%D0%B0.jpg",
